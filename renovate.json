{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["platformVersion"],
      "registryUrls": ["https://plugins.jetbrains.com/maven"],
      "datasourceTemplate": "maven",
      "depNameTemplate": "com.jetbrains.intellij.idea:ideaIC",
      "versioning": "loose"
    },
    {
      "matchPackageNames": ["pluginUntilBuild"],
      "registryUrls": ["https://plugins.jetbrains.com/maven"],
      "datasourceTemplate": "maven",
      "depNameTemplate": "com.jetbrains.intellij.idea:ideaIC",
      "versioning": "loose",
      "extractVersion": "^(?<version>\\d+)\\.",
      "packageRules": [
        {
          "matchPackageNames": ["platformVersion"],
          "matchCurrentVersion": "^(?<version>\\d+)\\."
        }
      ]
    }
  ]
}
